<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFC2AD"
    tools:context=".AddNoteActivity">

    <EditText
        android:id="@+id/noteTitle"
        android:layout_width="383dp"
        android:layout_height="40dp"
        android:hint="Заголовок"
        android:background="@drawable/background"
        android:textColorHint="#322520"
        android:textColor="#2B201B"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <EditText
        android:id="@+id/noteText"
        android:layout_width="382dp"
        android:layout_height="233dp"
        android:hint="Текст"
        android:background="@drawable/background"
        android:textColorHint="#322520"
        android:textColor="#2B201B"
        android:padding="10dp"
        android:gravity="top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <EditText
        android:id="@+id/reminderTimeEditText"
        android:layout_width="378dp"
        android:layout_height="217dp"
        android:background="@drawable/background"
        android:gravity="top"
        android:hint="Текст"
        android:padding="10dp"
        android:textColor="#2B201B"
        android:textColorHint="#322520"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.586"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901" />

    <Button
        android:id="@+id/saveNoteButton"
        android:layout_width="252dp"
        android:layout_height="49dp"
        android:text="Сохранить"
        android:backgroundTint="#734E47"
        android:textColor="#EABBAE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.479" />

    <Button
        android:id="@+id/set_reminder_button"
        android:layout_width="159dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="404dp"
        android:backgroundTint="#734E47"
        android:text="Напоминание"
        android:textColor="#EABBAE"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>